# DLV Insight - Local Development Configuration Example
# Copy this file to .env.local and fill in your values

# Clerk Authentication (Get from https://clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Database URL (Using local PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/dlvinsight_dev"

# Encryption key for sensitive data (generate with: openssl rand -base64 32)
ENCRYPTION_KEY="your_32_byte_encryption_key_here"

# Stripe (for payments - using test keys)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
BILLING_PLAN_ENV=dev

# App Configuration
NEXT_PUBLIC_APP_NAME="DLV Insight"
NEXT_PUBLIC_APP_DESCRIPTION="Amazon Seller Profit Analytics Platform"

# Skip database migrations (useful when migrations are already applied)
SKIP_DB_MIGRATIONS=true

# Amazon SP-API Credentials
# For Sandbox environment, get these from Amazon Seller Central Developer Console
AMAZON_SP_API_APP_ID=amzn1.sp.solution.your-app-id
AMAZON_SP_API_LWA_APP_ID=amzn1.application-oa2-client.your-lwa-app-id
AMAZON_SP_API_LWA_CLIENT_SECRET=amzn1.oa2-cs.v1.your-lwa-client-secret
AMAZON_SP_API_APP_NAME="Your App Name"